/* pages/home/index.wxss */
.search {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center
}

.search .widgetes {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 10%
}
.search-input {
  padding: 5rpx;
	background-color: #FFFFFF;
	display: flex;
	flex-direction: row;
	height: 100%;
	width: 80%;
  border-radius:10rpx;
	align-items: center;
}
.search-text{
	top:0px;
	padding:0px;
	left: 0rpx;
	right: 0rpx;
}
.search-icon{
	width: 30rpx;
	height: 30rpx;
  padding-right: 10rpx
}
.widgetes-img {
  width: 40rpx;
  height: 40rpx
}
.swiper {
  width: 100%;
  height: 325rpx
}

.conent-scroll {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  white-space: nowrap;
}

.swiper-item {
  width: 100%;
  height: 100%
}
