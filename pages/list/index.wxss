/* pages/list/index.wxss */
/* scroll-view 不显示滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.prolist {
  display: flex;
  flex-direction: column;
  width: 100%
}
.prolist-item {
  padding: 6rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.prolist-cover {
  padding: 0 30rpx;
  width: 520rpx;
  height: 240rpx;
  overflow: hidden
}
.prolist-cover image {
  width: 100%;
  height: 100%;
  border: 0 none;
  vertical-align: top
}
.prolist-info {
  box-sizing: border-box;
  min-height: 240rpx;
  padding: 0 20rpx 16rpx 20rpx;
  border-bottom: 2rpx solid #e8e8ed
}
.prolist-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  height: 80rpx;
  overflow: hidden;
  color: #333;
  font-size: 28rpx;
  margin-top: 16rpx
}
.prolist-price {
  font-size: 36rpx;
  color: #e93b3d;
  margin-top: 26rpx
}
.prolist-other {
  font-size: 24rpx;
  color: #999;
  padding: 16rpx 60rpx 4rpx 0
}
.prolist-comment {
  margin-right: 10rpx
}
.endview{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}