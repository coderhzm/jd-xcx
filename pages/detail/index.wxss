/* pages/detail/index.wxss */
.detail {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.mod-slider {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  background: #fff;
  border-top: 2rpx solid #e8e8ed;
  border-bottom: 2rpx solid #e8e8ed
}
.swiper-itemImg {
  display: block;
  width: 100%;
  height: 820rpx
}
.buy_area{
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 120rpx;
}
.textWrap{
  background: #fff;
  padding: 20rpx;
}
.textWrap text {
  color: #333;
  overflow: hidden;
  font-size: 32rpx;
  font-weight: 600;
  /* word-break: break-word; */
}
.priceWrap{
  background: #fff;
  padding: 20rpx
}
.priceWrap text{
  font-size: 36rpx;
  color: #e4393c;
  font-weight: 700;
}