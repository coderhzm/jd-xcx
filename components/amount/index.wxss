/* components/amount/index.wxss */
.num_wrap{
  width: 220rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
}
.num_wrap .btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: #f7f7f7;
  text-align: center;
  border-radius: 3rpx;
  color: #333;
}
.btn::after{
  border: none;
}
.numberInput{
  width: 90rpx;
  background: #f7f7f7;
  height: 60rpx;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  border: none;
  margin: 0 5rpx;
}